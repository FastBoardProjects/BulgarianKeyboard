<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NewCustomSeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SuggestionsBarParentTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="SuggestionsBarTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@drawable/button_transparent_bg_on_press</item>
        <item name="android:fontFamily">sans</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditingViewItemStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:hapticFeedbackEnabled">false</item>
        <item name="android:background">@drawable/button_transparent_bg_on_press_with_border</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="OneHandViewTheme">
        <item name="android:layout_width">@dimen/one_handed_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="OneHandViewThemeButton">
        <item name="android:layout_width">@dimen/one_handed_button_width</item>
        <item name="android:layout_height">@dimen/one_handed_button_height</item>
        <item name="android:autoMirrored">true</item>
        <item name="android:background">@drawable/button_transparent_bg_on_press</item>
        <item name="android:padding">0dp</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="SuggestionsBarSeperatorTheme">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">@dimen/suggestions_bar_margining</item>
        <item name="android:layout_marginBottom">@dimen/suggestions_bar_margining</item>
        <item name="android:background">?semiTransparentColor</item>
    </style>

    <style name="SuggestionsBarSingleButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="elevation">0dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:padding">@dimen/suggestions_bar_padding</item>
        <item name="android:layout_margin">@dimen/suggestions_bar_margining</item>
        <item name="android:background">@drawable/shape_oval</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="SuggestionsBarButtonNew" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
        <item name="android:padding">@dimen/suggestions_bar_padding</item>
        <item name="android:background">@drawable/shape_oval</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="SuggestionsBarSingleButton.ClipboardSuggestion">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_shape_keyboard_key_2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SuggestionsBarButtonNew.Toggle">
        <item name="android:autoMirrored">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FCA120</item>
        <item name="colorControlActivated">#FCA120</item>
    </style>

</resources>
